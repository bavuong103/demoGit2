@model IEnumerable<QuanLyNhanVienDbFirst.Models.Employee>

@{
    ViewData["Title"] = "DistinctSumSalary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DistinctSumSalary</h1>

<table class="table">
    
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th></th>
        </tr>
    </thead>
@if(Model != null)
    {
        <tbody>
       
            @foreach(var i in Model)
            {
                <tr>
                    
                    <td>
                        @i.Name
                    </td>
               
                </tr>   
            }
            Tổng lương: @Model.Sum(x => x.Salary)
        </tbody>
    }
    else
    {
        <tbody>
            <tr>
                <td>Không có dữ liệu</td>
            </tr>
        </tbody>
    }
    
</table>